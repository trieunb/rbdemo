<section id="popup-event" class="hidden-section">
    <input type="hidden" name="view-popup-event" id="view-popup-event" value="<%= @dataPopupEvent == nil ? 0 : @dataPopupEvent[:isset] %>">
    <% if @dataPopupEvent != nil && @dataPopupEvent[:event] != nil%>
    <div class="class-info">
        <div class="container">
            <div class="wrap-show-event-nearest">
                <div class="col-md-12 text-center">
                    <img class="banner-event-nearest" src="<%= @dataPopupEvent[:event][:image] %>" alt="" data-event-id="<%= @dataPopupEvent[:event][:id] %>" data-event-link="<%= @dataPopupEvent[:event][:link] %>">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</section>
